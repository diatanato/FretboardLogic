<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="tunings"
        android:title="Строй">
        <PreferenceCategory
            android:title="Струны">
            <com.diatanato.android.fretboarlogic.settings.preferences.StringPreference
                android:key="string0"
                android:title="1" />
            <com.diatanato.android.fretboarlogic.settings.preferences.StringPreference
                android:key="string1"
                android:title="2" />
            <com.diatanato.android.fretboarlogic.settings.preferences.StringPreference
                android:key="string2"
                android:title="3" />
            <com.diatanato.android.fretboarlogic.settings.preferences.StringPreference
                android:key="string3"
                android:title="4" />
            <com.diatanato.android.fretboarlogic.settings.preferences.StringPreference
