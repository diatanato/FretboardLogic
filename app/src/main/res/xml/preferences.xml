                android:key="string5"
                android:title="6" />
        </PreferenceCategory>
    </PreferenceScreen>
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_alteration_titles"
        android:entryValues="@array/pref_alteration_values"
        android:key="alteration"
        android:title="@string/pref_alteration_title" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="zoom"
        android:title="@string/pref_zoom_title" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="reverse"
        android:title="@string/pref_reverse_title" />
